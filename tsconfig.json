{
  "include": [
    "./scripts/**/*.ts"
  ],
  "exclude": [
    "**/__tests__/"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es6",
      "es2015.promise",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
