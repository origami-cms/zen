{
  "name": "origami-zen",
  "private": true,
  "repository": "https://github.com/origami-cms/zen",
  "author": "Tristan Matthias <hello@tristanmatthias.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn watch & yarn serve",
    "watch:sass": "yarn build:sass -- -w",
    "serve": "http-server dist/",
    "lint": "tslint -p . --fix",
    "clean": "rm -rf dist/",
    "bootstrap": "lerna bootstrap; tsc --build ./scripts/tsconfig.json",
    "build": "yarn build:sass; lerna run build --bail; lerna run rollup --parallel",
    "build:sass": "sass-render 'packages/**/**.scss' --suffix=-css.ts -t ./css-template.ts",
    "test": "lerna run test",
    "bundle": "cd packages/Zen; yarn build; yarn rollup",
    "publish:prerelease": "ts-node scripts/publish.ts"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@origami/core-lib": "^0.0.3-alpha.6",
    "@origami/tslint-config": "^0.0.3-alpha.3",
    "@skatejs/ssr": "^0.19.9",
    "@types/execa": "^0.9.0",
    "@types/listr": "^0.13.0",
    "@types/path-to-regexp": "^1.7.0",
    "@types/redux": "^3.6.0",
    "@types/seamless-immutable": "^7.1.1",
    "@webcomponents/webcomponentsjs": "^2.1.3",
    "babel-jest": "^23.6.0",
    "commitlint": "^7.2.1",
    "conventional-changelog-cli": "^2.0.5",
    "css-color-converter": "^1.1.0",
    "email-validator": "^2.0.4",
    "execa": "^1.0.0",
    "http-status-codes": "^1.3.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.0",
    "listr": "^0.14.3",
    "lit-element": "^2.0.0-rc.2",
    "lit-html": "^1.0.0-rc.2",
    "node-sass": "^4.9.0",
    "origami-icons": "^0.0.15",
    "path-to-regexp": "^2.2.1",
    "polymer3-decorators": "https://github.com/tristanMatthias/polymer-decorators.git",
    "pwa-helpers": "^0.8.2",
    "redux": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rollup": "^0.65.0",
    "rollup-plugin-babel-minify": "^5.0.0",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.16.1",
    "seamless-immutable": "^7.1.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.10.0",
    "tslint-config-origami": "^1.0.4",
    "typescript": "^3.1.1",
    "wc-sass-render": "^1.1.2",
    "zen-css": "^1.1.17",
    "@types/semver": "^5.5.0",
    "semver": "^5.6.0"
  },
  "dependencies": {
    "jest": "^23.6.0",
    "jest-environment-webdriver": "^0.2.0",
    "rollup-plugin-visualizer": "^0.9.2",
    "wct-browser-legacy": "^1.0.1"
  }
